//@version=5
strategy("double death strategy", overlay=true)

float fastsma=ta.sma(close, 50)
float slowsma1=ta.sma(close,100)
float slowsma2=ta.sma(close, 200)

switch
    fastsma < slowsma1 and fastsma < slowsma2  => strategy.entry("sell", strategy.short )

plot(fastsma, color=color.orange)
plot(slowsma1)
plot(slowsma2)
